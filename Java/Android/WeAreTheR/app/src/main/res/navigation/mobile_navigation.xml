<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.wearether.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="SearchText"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.example.wearether.ui.favorites.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/nav_forecasts"
        android:name="com.example.wearether.ui.forecasts.ForecastsFragment"
        android:label="fragment_forecasts"
        tools:layout="@layout/fragment_forecasts">
        <argument
            android:name="PlaceId"
            app:argType="string" />
        <argument
            android:name="PlaceName"
            app:argType="string" />
    </fragment>
</navigation>