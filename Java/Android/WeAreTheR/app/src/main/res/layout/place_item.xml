<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.example.wearether.models.pojo.Place" />
    </data>

    <LinearLayout
        android:id="@+id/llPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/tvCityId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{model.key}"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_bottom"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-16dp">

            <TextView
                android:id="@+id/tvPlaceName"
                style="@style/PlaceItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".50"
                android:text="@{model.localizedName}"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvState"
                style="@style/PlaceItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".50"
                android:text="@{model.administrativeArea.localizedName}"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCountry"
                style="@style/PlaceItemTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{model.country.localizedName}"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ibAddDelToFavorites"
                style="@style/PlaceItemTextStyle"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="#00FFFFFF"
                app:srcCompat="@android:drawable/star_big_off" />

        </LinearLayout>

    </LinearLayout>
</layout>