<form method="post">
    <input type="hidden" name="id" value="{{emp.id}}">

    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label for="validationDefault01">First Name</label>
            <input type="text" class="form-control" id="validationDefault01" name="fname" value="{{emp.fname}}" required>
        </div>

        <div class="col-md-4 mb-3">
            <label for="validationDefault02">Surname Name</label>
            <input type="text" class="form-control" id="validationDefault02" name="sname" value="{{emp.sname}}" required>
        </div>

        <div class="col-md-4 mb-3">
            <label for="validationDefault02">Patronymic Name</label>
            <input type="text" class="form-control" id="validationDefault03" name="pname" value="{{emp.pname}}" required>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label for="validationDefault01">Email</label>
            <input type="text" class="form-control" id="validationDefault04" name="email" value="{{emp.email}}" required>
        </div>

        <div class="col-md-4 mb-3">
            <label for="validationDefault02">Age</label>
            <input type="number" class="form-control" id="validationDefault05" min="18" max="60" name="age" value="{{emp.age}}" required>
        </div>

        <div class="col-md-4 mb-3">
            <label for="validationDefault06">Post</label>
            <select name="post">
                <option selected>{{slctd}}</option>
                {{#each posts}}
                    <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">{{button_name}}</button>
</form>