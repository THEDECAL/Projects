@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Напоминание пароля";
}

<link rel="stylesheet" href="~/css/form.css" />

<form class="form card" method="post">
    <div class="text-center">
        <img class="m-3" src="/images/easy-billing-icon.svg" alt="..." width="100" height="100">
        <h1 class="h4 font-weight-normal">@ViewData["Title"]</h1>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email" class="bmd-label-floating"></label>
        <input type="email" class="form-control" required autofocus value="">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a class="btn btn-default btn-sm" asp-page="./Login">Вход</a>
    </div>

    <button class="btn btn-raised btn-success btn-block" type="submit">Напомнить</button>

    <p class="mt-5 mb-3 text-muted text-center">&copy; 2020 - EasyBilling</p>
</form>

