<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - EasyBilling</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/lib/bootstrap-material-design/css/bootstrap-material-design.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <partial name="_NavBar" />

        <main role="main" class="pb-3">
            <div class="card row align-items-center" style="padding: 30px;">
                <a class="btn btn-lg btn-info btn-block" role="button" href="#">@ViewData["Title"]</a>
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - EasyBilling - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/lib/jquery/jquery-3.2.1.slim.min.js"></script>
    <script src="~/lib/popper/popper.js"></script>
    <script src="~/lib/bootstrap-material-design/js/bootstrap-material-design.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>$(document).ready(function () { $('body').bootstrapMaterialDesign(); });</script>
    @*@RenderSection("Scripts", required: false)*@
</body>
</html>
