<Window x:Class="Client.UserNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="UserNameDialog" Height="200" Width="400" ResizeMode="NoResize" Visibility="Visible" WindowStyle="None" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" BorderThickness="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblEnterName" Content="Введите имя пользователя:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Grid.ColumnSpan="2" TextOptions.TextHintingMode="Fixed" FontSize="16"/>
        <TextBox x:Name="tbUserName" Grid.ColumnSpan="2" Grid.Row="1" TextWrapping="Wrap" Padding="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="btnAcceptName" Content="Принять" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="141" Height="34" Click="btnAcceptName_Click"/>

    </Grid>
</Window>
